# =============================================================================
# ULTIMATE CSS OPTIMIZER - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env in your project root and configure your settings
# =============================================================================

# =============================================================================
# GROQ AI CONFIGURATION (for AI-powered CSS fixes)
# =============================================================================
# Get your free API key from: https://console.groq.com/
# Sign up is free and includes generous usage limits
GROQ_API_KEY=your_groq_api_key_here

# Groq API Settings (these are the defaults - you can customize if needed)
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions
GROQ_MODEL=llama-3.3-70b-versatile

# AI Features Control
ENABLE_AI_FIXES=true

# =============================================================================
# CSS OPTIMIZER SETTINGS
# =============================================================================

# File Paths (relative to project root)
CSS_INPUT_FILE=style.css
CSS_OUTPUT_FILE=style.optimized.css
CSS_BACKUP_FILE=style.backup.css

# Processing Options
ENABLE_AUTOPREFIXER=true
ENABLE_MINIFICATION=false
ENABLE_SOURCE_MAPS=false

# File Size Limits (in MB)
MAX_FILE_SIZE_MB=10
WARN_SIZE_MB=5

# Browser Support for Autoprefixer
# Comma-separated list of browser queries
BROWSERS="> 1%, last 2 versions, not dead, not ie 11"

# =============================================================================
# POSTCSS PLUGIN SETTINGS
# =============================================================================

# Media Query Sorting
ENABLE_MEDIA_QUERY_SORTING=true
MEDIA_QUERY_SORT_ORDER=mobile-first

# CSS Nano Settings (for minification)
CSSNANO_PRESET=default
CSSNANO_DISCARD_COMMENTS=false
CSSNANO_CSS_DECLARATION_SORTER=false

# =============================================================================
# PRETTIER FORMATTING SETTINGS
# =============================================================================

PRETTIER_TAB_WIDTH=2
PRETTIER_USE_TABS=false
PRETTIER_PRINT_WIDTH=100
PRETTIER_END_OF_LINE=lf
PRETTIER_SEMI=true
PRETTIER_SINGLE_QUOTE=false

# =============================================================================
# ADVANCED AI SETTINGS
# =============================================================================

# AI Processing Limits (to control API costs)
AI_MAX_ERRORS_TO_PROCESS=5
AI_MAX_TOKENS_PER_REQUEST=1000
AI_TEMPERATURE=0.1
AI_TOP_P=1.0

# AI Retry Settings
AI_MAX_RETRIES=3
AI_RETRY_DELAY_MS=1000

# =============================================================================
# LOGGING AND DEBUG SETTINGS
# =============================================================================

# Log Levels: error, warn, info, debug
LOG_LEVEL=info

# Enable detailed processing logs
ENABLE_VERBOSE_LOGGING=false

# Show processing time for each step
ENABLE_PERFORMANCE_TIMING=true

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# For Development (verbose logging, no minification)
# ENABLE_MINIFICATION=false
# ENABLE_VERBOSE_LOGGING=true
# LOG_LEVEL=debug

# For Production (minified, optimized)
# ENABLE_MINIFICATION=true
# ENABLE_SOURCE_MAPS=false
# LOG_LEVEL=warn

# For CI/CD (no backup, fast processing)
# CSS_BACKUP_FILE=
# ENABLE_AI_FIXES=false
# LOG_LEVEL=error

# =============================================================================
# QUICK START INSTRUCTIONS
# =============================================================================
# 1. Get your Groq API key: https://console.groq.com/
# 2. Replace "your_groq_api_key_here" with your actual API key
# 3. Adjust file paths if needed
# 4. Run: npm run optimize:advanced
# 
# That's it! The optimizer will use these settings automatically.
# =============================================================================
